{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for CEE final project website",
  "main": "src/main.ts",
  "scripts": {
    "start": "node bundle/main.js",
    "dev": "nodemon",
    "build": "rimraf bundle && esbuild src/main.ts --platform=node --bundle --minify --keep-names --outdir=bundle --outbase=src --sourcemap && copyfiles package.json bundle",
    "upload": "scp -r bundle/* cee@ubunsin:/home/cee/backend/",
    "format": "prettier -w src/"
  },
  "author": "Krissada Singhakachain",
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee",
  "dependencies": {
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@swc-node/register": "^1.10.9",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.24.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  }
}
